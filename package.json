{
  "name": "essaybot-monitoring",
  "version": "1.0.0",
  "description": "Monitoring and alerting system for EssayBot services",
  "main": "src/monitor.js",
  "scripts": {
    "start": "node src/monitor.js",
    "dev": "nodemon src/monitor.js",
    "test": "node src/test-monitoring.js",
    "install-pm2": "npm install -g pm2",
    "start-pm2": "pm2 start ecosystem.config.js",
    "stop-pm2": "pm2 stop essaybot-monitoring",
    "restart-pm2": "pm2 restart essaybot-monitoring",
    "logs-pm2": "pm2 logs essaybot-monitoring",
    "status-pm2": "pm2 status"
  },
  "keywords": ["monitoring", "essaybot", "teams", "alerts", "rag"],
  "author": "EssayBot Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.4",
    "node-cron": "^3.0.3",
    "winston": "^3.15.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
